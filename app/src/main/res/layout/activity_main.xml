<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/travel1"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyGO"
        android:layout_below="@+id/logo1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="105dp"
        />

    <Button
        android:id="@+id/butt1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#0676D0"
        android:drawableLeft="@drawable/facebook"
        android:text="Connect with Facebook"
        android:layout_marginTop="120dp"
        android:textSize="18sp"
        android:layout_below="@+id/tex1"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/butt2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/butt1"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:text="Connect with Phone"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/butt3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#0E0E0F"
        android:text="Log In"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_below="@+id/butt2"
        app:cornerRadius="10dp" />

    <TextView
        android:id="@+id/tex2"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Don't have an Account?"
        android:layout_below="@+id/butt3"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/butt3"
        android:layout_toEndOf="@+id/tex2"
        android:layout_toRightOf="@id/tex2"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="@color/black" />

</RelativeLayout>