<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper3"
    android:padding="30dp"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/img1"
        android:layout_marginTop="50dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/person1"
        />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/person2"
        android:layout_below="@id/img1"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="40dp"
        android:src="@drawable/person3"
        android:layout_below="@id/img2"
        />

    <TextView
        android:id="@+id/tex1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Easy discovering new place and share"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/img3"
        />

    <TextView
        android:id="@+id/tex2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="these between your frinds"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/tex1"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="40dp"
        android:layout_below="@id/tex2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter your phone number"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/phone"
        app:prefixText="+880"
        android:background="#FFFFFF">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="21"
            android:gravity="center"
            android:textSize="18sp"

            />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>